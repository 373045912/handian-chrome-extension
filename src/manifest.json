{
	"manifest_version": 2,

	"name": "汉典",
	"description": "汉典划词查询",
	"version": "1.2",
	"icons": {
		"16": "handian16.png",
		"48": "handian48.png",
		"128": "handian128.png"
	},
	
	"content_scripts": [{
		"matches": ["http://*/*"],
		"js": ["show.js"],
		"run_at": "document_end"
	}],

	"permissions": [
		"http://*.zdic.net/",
		"storage"
	],
	"browser_action": {
		"default_icon": "handian48.png",
		"default_popup": "popup.html"
	}
}
